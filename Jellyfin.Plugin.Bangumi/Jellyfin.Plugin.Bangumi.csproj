    <ItemGroup>
        <None Remove="Configuration\configPage.html" />
        <EmbeddedResource Include="Configuration\ConfigPage.html" />
    </ItemGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="Jellyfin.Plugin.Bangumi.Test" />
    </ItemGroup>
</Project>
